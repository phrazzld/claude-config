{
  "mcpServers": {
    "moonbridge": {
      "type": "stdio",
      "command": "uvx",
      "args": ["moonbridge@latest"]
    },
    "exa": {
      "type": "http",
      "url": "https://mcp.exa.ai/mcp",
      "headers": {}
    },
    "sentry": {
      "command": "npx",
      "args": [
        "-y",
        "@sentry/mcp-server",
        "--access-token",
        "${SENTRY_AUTH_TOKEN}",
        "--organization-slug",
        "${SENTRY_ORG}"
      ]
    },
    "posthog": {
      "type": "http",
      "url": "https://mcp.posthog.com/mcp",
      "headers": {
        "Authorization": "Bearer ${POSTHOG_PERSONAL_API_KEY}"
      }
    }
  }
}
